{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "testMatch": ["**/**/*.test.ts", "**/**/*.spec.ts"],
  "forceExit": true,
  "verbose": true,
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1",
    "^@tests/(.*)$": "<rootDir>/tests/$1"
  },
  "setupFiles": ["<rootDir>/tests/setup-env.ts"]
}
